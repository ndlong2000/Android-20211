<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingTop="?attr/actionBarSize">

    <Button
        android:id="@+id/dot"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addSymbol"
        android:text="."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/sqrt"
        app:layout_constraintTop_toBottomOf="@+id/num3" />

    <Button
        android:id="@+id/equal"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:layout_marginStart="3dp"
        android:onClick="caculate"
        android:text="="
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <Button
        android:id="@+id/plusminus"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:text="±"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1" />

    <Button
        android:id="@+id/num0"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/percent"
        app:layout_constraintTop_toBottomOf="@+id/num2" />

    <Button
        android:id="@+id/num3"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/sqrt"
        app:layout_constraintTop_toBottomOf="@+id/num6" />

    <Button
        android:id="@+id/plus"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:layout_marginStart="3dp"
        android:onClick="addSymbol"
        android:text="+"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num3"
        app:layout_constraintTop_toBottomOf="@+id/minus" />

    <Button
        android:id="@+id/num1"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num4" />

    <Button
        android:id="@+id/num2"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/percent"
        app:layout_constraintTop_toBottomOf="@+id/num5" />

    <Button
        android:id="@+id/num6"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/num5"
        app:layout_constraintTop_toBottomOf="@+id/num9" />

    <Button
        android:id="@+id/minus"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:layout_marginStart="3dp"
        android:onClick="addSymbol"
        android:text="-"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num6"
        app:layout_constraintTop_toBottomOf="@+id/multiply" />

    <Button
        android:id="@+id/num4"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="4"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num7" />

    <Button
        android:id="@+id/num5"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/percent"
        app:layout_constraintTop_toBottomOf="@+id/num8" />

    <Button
        android:id="@+id/num9"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="9"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/num8"
        app:layout_constraintTop_toBottomOf="@+id/del" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:layout_marginStart="3dp"
        android:onClick="addSymbol"
        android:text="×"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num9"
        app:layout_constraintTop_toBottomOf="@+id/divide" />

    <Button
        android:id="@+id/num7"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:text="7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ce"
        android:onClick="addNumber" />

    <Button
        android:id="@+id/num8"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:onClick="addNumber"
        android:text="8"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/num7"
        app:layout_constraintTop_toBottomOf="@+id/c" />

    <Button
        android:id="@+id/del"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="del"
        android:text="Del"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/c"
        app:layout_constraintTop_toBottomOf="@+id/exp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:layout_marginStart="3dp"
        android:onClick="addSymbol"
        android:text="÷"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/del"
        app:layout_constraintTop_toBottomOf="@+id/frac" />

    <Button
        android:id="@+id/ce"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:text="CE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percent" />

    <Button
        android:id="@+id/c"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:onClick="buttonC"
        android:text="C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ce"
        app:layout_constraintTop_toBottomOf="@+id/sqrt" />

    <Button
        android:id="@+id/frac"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:layout_marginStart="3dp"
        android:onClick="addSymbol"
        android:text="1/x"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exp"
        app:layout_constraintTop_toBottomOf="@+id/output" />

    <Button
        android:id="@+id/exp"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addSymbol"
        android:text="x^2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/sqrt"
        app:layout_constraintTop_toBottomOf="@+id/output" />

    <Button
        android:id="@+id/sqrt"
        android:layout_width="102dp"
        android:layout_height="86dp"
        android:onClick="addSymbol"
        android:text="√"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/percent"
        app:layout_constraintTop_toBottomOf="@+id/output" />

    <TextView
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textAlignment="textEnd"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/output"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <Button
        android:id="@+id/percent"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:onClick="addSymbol"
        android:text="%"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/output" />

</android.support.constraint.ConstraintLayout>